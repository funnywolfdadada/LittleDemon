<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_content"
        android:background="@mipmap/bg0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:id="@+id/layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    style="@style/EntryButtonStyle"
                    android:id="@+id/testFragment"
                    android:text="testFragment"/>

            <TextView
                    style="@style/EntryButtonStyle"
                    android:id="@+id/simpleList"
                    android:text="simpleList"/>

            <TextView
                    style="@style/EntryButtonStyle"
                    android:id="@+id/fragmentViewPager"
                    android:text="fragmentViewPager"/>

            <TextView
                    style="@style/EntryButtonStyle"
                    android:id="@+id/motionLayout"
                    android:text="motionLayout"/>

            <TextView
                    style="@style/EntryButtonStyle"
                    android:id="@+id/coordinatorLayout"
                    android:text="coordinatorLayout"/>

            <TextView
                    style="@style/EntryButtonStyle"
                    android:id="@+id/viewDragTest"
                    android:text="viewDragTest"/>

            <TextView
                    style="@style/EntryButtonStyle"
                    android:id="@+id/layoutManagerTest"
                    android:text="layoutManagerTest"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>