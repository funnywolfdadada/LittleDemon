<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF"
        >

    <Button
            android:id="@+id/open_layout_0"
            android:text="open_layout"
            android:layout_width="200dp"
            android:layout_height="100dp"
            />

    <TextView
            android:id="@+id/open_activity_0"
            android:text="open_activity"
            style="@style/EntryButtonStyle"
            android:layout_width="200dp"
            android:layout_height="100dp"
            />

    <Button
            android:id="@+id/open_layout_1"
            android:text="open_layout"
            android:layout_width="200dp"
            android:layout_height="100dp"
            />

    <TextView
            android:id="@+id/open_activity_1"
            android:text="open_activity"
            style="@style/EntryButtonStyle"
            android:layout_width="200dp"
            android:layout_height="100dp"
            />

    <Button
            android:id="@+id/open_layout_2"
            android:text="open_layout"
            android:layout_width="200dp"
            android:layout_height="100dp"
            />

    <TextView
            android:id="@+id/open_activity_2"
            android:text="open_activity"
            style="@style/EntryButtonStyle"
            android:layout_width="200dp"
            android:layout_height="100dp"
            />

    <androidx.constraintlayout.helper.widget.Flow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:constraint_referenced_ids="open_layout_0,open_activity_0,open_activity_1,open_layout_1,open_layout_2,open_activity_2"
            android:orientation="horizontal"
            app:flow_wrapMode="chain"
            />

</androidx.constraintlayout.widget.ConstraintLayout>