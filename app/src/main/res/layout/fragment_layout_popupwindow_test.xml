<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#FFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View
            android:id="@+id/anch"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#FF0000"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    <TextView
            android:id="@+id/show_top"
            android:text="top"
            android:textSize="24sp"
            android:gravity="center"
            android:background="#8000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/show_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/show_bottom"
            android:text="bottom"
            android:textSize="24sp"
            android:gravity="center"
            android:background="#8000"
            app:layout_constraintStart_toEndOf="@id/show_top"
            app:layout_constraintEnd_toStartOf="@id/show_left"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/show_left"
            android:text="left"
            android:textSize="24sp"
            android:gravity="center"
            android:background="#8000"
            app:layout_constraintStart_toEndOf="@id/show_bottom"
            app:layout_constraintEnd_toStartOf="@id/show_right"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/show_right"
            android:text="right"
            android:textSize="24sp"
            android:gravity="center"
            android:background="#8000"
            app:layout_constraintStart_toEndOf="@id/show_left"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>